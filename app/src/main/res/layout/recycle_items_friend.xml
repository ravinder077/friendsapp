<?xml version="1.0" encoding="utf-8"?>




<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewGroup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <!-- Product id (pid) - will be DDEN - used to pass to other activity -->



    <android.support.v7.widget.CardView
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="2dp"
        android:elevation="6dp"
        android:gravity="center_vertical"
        android:thicknessRatio="1.9"
        app:cardBackgroundColor="#fff">

        <RelativeLayout
            android:id="@+id/friendimagebackground"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/mycircle"
            android:gravity="center_vertical"
            android:layout_margin="5dp"
            >



            <TextView
                android:id="@+id/txtnfirst"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:textAlignment="center"
                android:text="A"
                android:textColor="@android:color/white"
                android:textSize="40dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/groupimg"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical" />
        </RelativeLayout>

        <TextView
            android:id="@+id/grouptxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="100dp"
            android:layout_weight="1"
            android:text="ttttttttttt"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="18sp" />


        <ImageView
            android:id="@+id/chaticon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/invite"
            android:layout_gravity="end|center"
            android:layout_marginRight="10dp"

    />
    </android.support.v7.widget.CardView>

</LinearLayout>